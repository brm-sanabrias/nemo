
extends partials/base.jade

block title
	-var titulo = "Redes";
	title brm - Nemo

block content

	div.container
		div.row
			div.col.m6.netbox-indicator
				
				div.circle.netbox.u-activo(data-red="fb")
					div.netbox-fb
				div.circle.netbox.u-inactivo(data-red="tw")
					div.netbox-tw
				div.circle.netbox.u-inactivo(data-red="yt")
					div.netbox-ins
		

		div.row
			div.col.s12.m12.l12.lista-redes

				div.card.card-panel
					div.card-content
						ul.marcas-sugerencias
	


					div.card-reveal
						form(action="#")
							div.row
								div.input-field.col.l10
									input#urlRed.validate.keyboard-input(type="text", placeholder="Ingresa la URL de la red social")

								div.input-field.col.l2
									button#buscarUrl.btn.green.waves-effect.waves-light(type="submit", name="")
										i.mdi-content-send
										
										
		div.row
			div.col.s16.m16.l6
				
				button.waves-effect.waves-light.btn.green.mostrar-keyb.
							No es ninguna
							<i class="right mdi-hardware-keyboard"></i>
			
			div.col.s6.m6.l6
				button.valign.waves-effect.waves-light.btn.orange.darken-4.continuar.
					No tengo cuenta aqu√≠
					<i class="right mdi-content-block"></i>
				

	| {#include file='keyboard.html'#}

block Scripts
	script(src='js/libs/numeral.min.js')
	script(src='js/nemo.js')
	script(src='js/nemo.redes.js')
