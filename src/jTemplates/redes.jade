
extends partials/base.jade

block title
	-var titulo = "Redes";
	title brm - Nemo

block content

	div.container
		div.row
			div.col.m6
				h3 oli, acá van las redes sociales

		div.row
			div.col.s6.m6.l6

				div.card.card-panel
					div.card-content
						ul.marcas-sugerencias
							- for (var x = 0; x < 6; x++)
								li.marca
									figure
										img.circle.responsive-img.z-depth-1(src="images/marca-sample.png", alt="logo-sample", title="logo-sample")
									span.user @Logo

					div.card-reveal
						form(action="#")
							div.row
								div.input-field.col.l10
									input.validate(type="text", placeholder="Ingresa la URL de la red social")

								div.input-field.col.l2
									button.btn.green.waves-effect.waves-light(type="submit", name="")
										i.mdi-content-send
				
				button.waves-effect.waves-light.btn.green.mostrar-keyb.
							No es ninguna
							<i class="right mdi-hardware-keyboard"></i>

			div.col.s6.m6.l6
				div.valign-wrapper.side-botones

					button.valign.waves-effect.waves-light.btn.orange.darken-4.no-tengo.
						No tengo cuenta aquí
						<i class="right mdi-navigation-close"></i>



block Scripts