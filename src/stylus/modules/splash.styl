#cara-nemo
	position relative
	#ne,
	#mo,
	#cara
	#rect-der,
	#rect-izq,
	#timon
		backface-visibility hidden
		opacity 0
		position relative
		stroke transparent
		transition all ease-in-out cubic-bezier(.95,.09,.6,.95) 1s

	#cara
		animation cara 1s ease-in-out normal 1 forwards
		position relative
		opacity 1
		transform scale(1.5) translateX(-50%) translateY(-39%)
		z-index 2
		
	#ne
		animation letras-izq 1s ease-in-out normal 1 forwards
		animation-delay 1s
		
	#mo
		animation letras-der 1s ease-in-out normal 1 forwards
		animation-delay 1.8s
		
	#rect-der, #rect-izq
		animation 0.5s ease-in-out normal 1  forwards
		animation-delay 3.9s
		transform-origin right
		
	#rect-der
		animation-name linea-der
		
	#rect-izq
		animation-name linea-izq
		
	#timon
		animation timon 2.5s ease-in-out normal 1  forwards
		animation-delay 2.2s
		fill transparent
		// opacity 1
		stroke #fff
		stroke-dashoffset 3037
		stroke-width 0.2rem
		// stroke-dasharray 3037
		


.loader
	background-color rgba(darken($Gris, 40%), 0.88)
	position absolute
	height 100%
	position absolute
	z-index 10
	width @height
	
	.nemo
		height 20rem
		left 50%
		margin 0 auto
		position absolute
		top 50%
		transform translate3d(-50%,-50%,0)
		width @height
		
		p
			border-top 0.1rem solid #fff
			color #fff
			margin-top -2rem
			padding-top 1rem
			position relative
			text-align center
	
		
.splash
	background-color #000
	height 100%
	position absolute
	width @height
	z-index 999
	


	.bg-video
		bottom 0
		left 0
		position absolute
		right 0
		top 0
		z-index -1
		

	.nemo
		height 40rem
		left 50%
		margin 0 auto
		position absolute
		top 50%
		transform translate3d(-50%,-50%,0)
		width @height