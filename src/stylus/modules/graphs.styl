path
	&.line
		fill none
		stroke-width 1px

//map
#mapa
	height 14rem
	width 100%

//Pie
#pie
	height 14rem
	max-width 100%
	width 100%
	
	a
		display none !important

//WordCloud
#tagCloud
	#myCanvas
		height 13.5rem
		max-width 100%
		width 100%

//graficas timeline
.axis
	path, line
		fill none
		stroke #000
		shape-rendering crispEdges
.band
	fill none
	stroke-width 1px
	stroke red

.card, .col
	transition all cubic-bezier(.95,.09,.6,.95) 1s	
	transform-origin 50% 0
	
.descargar
	display block
	margin 0 auto
	

.title
	font-size 1.5rem
	left 0
	position absolute


.row-numeros
	text-align center
	
	
	h2
		text-align left
		
	.social
		path("redes-icon.png")
		background-repeat no-repeat
		background-size 300%
		display inline-block
		height 3.9rem
		margin 1rem 0.5rem
		overflow hidden
		vertical-align middle
		width @height
		
		&-fb
			background-position bottom left
			
		&-tw
			background-position bottom center
			
		&-yt
			background-position bottom right




.zoomOut
	fill $AzulM
	cursor pointer

	&Text
		pointer-events none
		fill #fff

.zoomOverlay
	pointer-events all
	fill none
